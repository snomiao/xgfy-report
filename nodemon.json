{
  "_ref": "https://dev.to/oieduardorabelo/nodejs-with-typescript-debug-inside-vscode-and-nodemon-23o7",
  "watch": [
    "src"
  ],
  "restartable": "rs",
  "ext": "tsx,ts,json",
  "ignore": [
    "src/**/*.spec.ts"
  ],
  "execMap": {
    "ts": "node --inspect --loader ts-node/esm --experimental-specifier-resolution=node",
    "mjs": "node --inspect --loader esm --experimental-specifier-resolution=node"
  },
  "env": {
    "NODE_ENV": "development"
  }
}